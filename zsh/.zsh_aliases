#!/bin/zsh

# Suppress's termianl errors
function suppressErr() {
  $1 $2 2>/dev/null;
}

# Suppress's termianl warnings
function suppressWarn() {
  $1 $2 1>/dev/null;
}

function CdLs() {
  echo '{$1}'
    if [[ $1 != "" && $2 == "" ]]
    then
        cd $1 
        ls -l
    elif [[ $1 != "" && $2 != "" ]]
    then
         cd $1
         ls $2
    fi
}

function unzipDir(){
  for d in *.zip
do
  dir=$1/${d%%.zip}
  mkdir $dir
  unzip -d "$dir" "$d"
done
}

